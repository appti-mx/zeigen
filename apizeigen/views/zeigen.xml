<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
 <!-- override the automatically generated list view for courses -->
    <record model="ir.ui.view" id="api_zeigen_tree_view">
        <field name="name">api.zeigen.tree</field>
        <field name="model">api.zeigen</field>
        <field name="arch" type="xml">
            <tree string="Course Tree">
                <field name="name"/>
            </tree>
        </field>
    </record>

<!-- session form view -->
    <record model="ir.ui.view" id="api_zeigen_view">
        <field name="name">api.zeigen.form</field>
        <field name="model">api.zeigen</field>
        <field name="arch" type="xml">
            <form string="Session Form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="api_zeigen_action">
        <field name="name">API</field>
        <field name="res_model">api.zeigen</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="api_zeigen" name="API"/>
    <menuitem id="api_zeigen_menu" name="API" parent="api_zeigen" action="api_zeigen_action"/>
</odoo>
